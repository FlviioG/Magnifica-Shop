<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Magnífica.DayNight.BN" parent="Widget.Material3.BottomNavigationView">
        <item name="android:color">@color/color_1</item>
        <item name="itemActiveIndicatorStyle">@style/Theme.Magnífica.DayNight.BNS</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/color_selector</item>
    </style>

    <style name="Theme.Magnífica.DayNight.BNS" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">@dimen/m3_bottom_nav_item_active_indicator_width</item>
        <item name="android:height">@dimen/m3_bottom_nav_item_active_indicator_height</item>
        <item name="marginHorizontal">@dimen/m3_bottom_nav_item_active_indicator_margin_horizontal
        </item>
        <item name="shapeAppearance">
            @style/ShapeAppearance.Material3.NavigationBarView.ActiveIndicator
        </item>
        <item name="android:iconTint">@color/white</item>
        <item name="itemTextColor">@color/color_1</item>
        <item name="android:color">@color/color_1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Theme.Magnífica.DayNight.Background" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/color_3</item>
    </style>

    <style name="Theme.Magnífica.DayNight.CardView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="cardBackgroundColor">@color/color_6</item>
    </style>

    <style name="Theme.Magnífica.DayNight.OnView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/color_2</item>
    </style>

    <style name="Theme.Magnífica.DayNight.FloatingButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundTint">@color/color_1</item>
        <item name="tint">@color/color_3</item>
    </style>

    <style name="Theme.Magnífica.DayNight.BlurView" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="realtimeOverlayColor">@color/color_2</item>
    </style>

    <style name="Theme.Magnífica.DayNight.Icon" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="tint">@color/color_1</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <style name="Theme.Magnífica.DayNight.TButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="strokeColor">@color/m3_button_outline_color_selector</item>
        <item name="strokeWidth">@dimen/m3_btn_stroke_size</item>
    </style>

    <style name="Theme.Magnífica.DayNight.Progress" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:indeterminateTint">@color/color_1</item>
        <item name="android:progressTint">@color/color_1</item>
    </style>

    <style name="Theme.Magnífica.DayNight.FButton" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:backgroundTint">@color/color_1</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="Theme.Magnífica.DayNight.View" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/color_1</item>
    </style>

    <style name="Widget.Magnífica.AppWidget.Container" parent="android:Widget">
        <item name="android:backgroundTint">@color/color_1</item>
    </style>
</resources>